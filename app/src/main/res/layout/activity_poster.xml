<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info.PosterActivity"
    android:background="@drawable/info_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_poster"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/poster_only"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_poster"
        app:srcCompat="@drawable/movie_default"
        tools:srcCompat="@drawable/movie_default" />
</androidx.constraintlayout.widget.ConstraintLayout>